{
    "extends": "airbnb-base",
    "env":{
        "mocha": true,
        "browser": true,
        "node": true,
        "es6": true,
        "commonjs": true           
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
